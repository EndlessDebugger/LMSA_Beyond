<p id="notice"><%= notice %></p>

<% @title = "My Event History" %>
<%= stylesheet_link_tag "home.css" %>

<div class="container py-4">
<br>
    <h1  class="display-10 fw-bold text-light">My Event History</h1>
    <div class="p-5 mb-4 bg-light rounded-3" style="text-align: center;">
      <div class="container-fluid py-5">
        <table  class="table table-striped">
          <thead>
            <tr>
              <th>Event</th>
              <th>User</th>
              <th>Sign in</th>
              <th>Point recv</th>
              <th>Date</th>
              <th colspan="3"></th>
              <br>
            </tr>
          </thead>
          <tbody>
          <p> Your Points: <%= current_user.sum_points %> </p>
            <% @event_hists.each do |event_hist| %>
              <tr>
                <td><%= event_hist.event_id if event_hist.user_id == current_user.id %></td>
                <td><%= event_hist.user_id if event_hist.user_id == current_user.id %></td>
                <td><%= event_hist.sign_in if event_hist.user_id == current_user.id %></td>
                <td><%= event_hist.point_recv if event_hist.user_id == current_user.id %></td>
                <td><%= Event.where("id = ?",event_hist.event_id).select("event_date") if event_hist.user_id == current_user.id %></td>
                <td><%= link_to 'Show', event_hist if event_hist.user_id == current_user.id %></td>
                <br>
              </tr>
            <% end %>

          </tbody>
        </table >
    </div> 
  </div> 
</div> 

<br>