<% @title = "LMSA Events" %>
<%= stylesheet_link_tag "home.css" %>
<div class="d-flex flex-column bd-highlight p-5 mb-4 bg-light rounded-3">
  <%= form_with(model: announcement) do |form| %>
    <% if announcement.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

        <ul>
          <% announcement.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, {class: "form-control", placeholder: "Name"} %>
    </div>
    
    <div class="mb-3">
      <%= form.label :desc, class: "form-label" %>
      <%= form.text_field :desc, {class: "form-control", placeholder: "Description"} %>
    </div>
          
    <%= link_to "Back", announcements_path, class:"btn btn-secondary text-light" %>
    <%= form.submit "Announce", class:"btn btn-secondary" %>

  <% end %>
</div>
