<% @title = "LMSA Home" %>
<%= stylesheet_link_tag "home.css" %>


<div class="container py-4">
<h1 class="display-10 fw-bold text-light">Home</h1>
<br>
    <div class="p-5 mb-4 bg-light rounded-3" style="text-align: center;">
      <div class="container-fluid py-5">
        <h1 class="display-10 fw-bold">Welcome back <%= current_user.first_name %>!</h1>
        <p> <strong>Points: </strong> <%= current_user.sum_points %> </p>
        <p>
            <strong>User Name: </strong>
            <%= current_user.first_name %>
            <%= current_user.last_name %>
        </p>

        <p>
            <strong>User ID: </strong>
            <%= current_user.id %>
        </p>

        <p>
            <strong>User Email: </strong>
            <%= current_user.email %>
        </p>

        <p>
            <strong>User Birthdate: </strong>
            <%= current_user.bod %>
        </p>

        <p>
            <strong>User Bio: </strong>
            <%= current_user.bioConfirmation %>
        </p>

         <% if current_user.major.present? %>
            <p>
                <strong>User Major: </strong>
                <%= current_user.major %>
            </p>
        <% end %>

        <%= link_to "Update my Info",  edit_user_session_path, {class: "btn btn-outline-secondary text-dark", type: "button"} %>
        <%if current_user.allowed%>
          <%=button_to "Make me an admin",{controller: "users", action: "dev",id: current_user.id }, {class: "btn btn-outline-secondary text-dark", type: "button"} %>
        <%end%>
      </div>
    </div>

    <div class="row align-items-md-stretch">
      <div class="col-md-6">
        <div class="h-100 p-5 bg-light rounded-3">
          <h2>User Options</h2>
          <p>To be filled in with a grid</p>
          <button class="btn btn-outline-dark" type="button">Options 1</button>
          <button class="btn btn-outline-dark" type="button">Options 2</button>
          <button class="btn btn-outline-dark" type="button">Options 3</button>
          <button class="btn btn-outline-dark" type="button">Options 4</button>
        </div>
      </div>
      <div class="col-md-6">
        <div class="h-100 p-5 bg-light border rounded-3">
          <h2>Point History Preview</h2>
           <%= link_to "Points Leaderboard",  myhistory_points_leaderboard_path, {class: "btn btn-secondary text-light", type: "button"} %>
        </div>
      </div>
    </div>
  </div>

<br>
  
