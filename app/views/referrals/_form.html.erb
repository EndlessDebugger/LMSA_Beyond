<%= form_with(model: @referral) do |form| %>

  <%= form.hidden_field :old_member, value: current_user.id%>

  <div class="field">
    <%= form.label :guest_first_name %>
    <%= form.text_field :guest_first_name %>
  </div>

  <div class="field">
    <%= form.label :guest_last_name %>
    <%= form.text_field :guest_last_name %>
  </div>



  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :medical_prof %>
    <%= form.select :medical_prof, [['No', false],['Yes', true]] %>
  </div>

  <%= form.hidden_field :date_referred, value:  DateTime.now%>
  <div class="d-flex justify-content-start">
  
    <div class="col-4">
      <%= link_to 'Back', referrals_path , {class: "btn btn-secondary text-light", type: "button"}%>
    </div>
    <div class="actions col-4">
      <%= form.submit "Submit", class: "btn btn-secondary text-light"%>
    </div>
  </div>

  
<% end %>
