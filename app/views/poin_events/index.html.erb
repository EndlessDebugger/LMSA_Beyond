<p id="notice"><%= notice %></p>

<% @title = "LMSA Points" %>
<%= stylesheet_link_tag "home.css" %>

<div class="container py-4">
  <h1 class="display-10 fw-bold text-light">Points</h1>
  <br>

  <div class="p-5 mb-4 bg-light rounded-3">

      <% if current_user.admin? %>
        <div class="pb-5 text-center">
          <%= link_to 'Award Points', new_poin_event_path, {class: "btn btn-secondary text-light btn-lg", type: "button"} %>
        </div>
      <% end %>

      <table class="table">
      <thead>
        <tr>
          <th scope="col">Points</th>
          <th scope="col">Date</th>
          <th scope="col">Description</th>
          <th scope="col">Admin award</th>
          <% if current_user.admin? %>
          <th scope="col">Options</th>
          <%end%>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% PoinEvent.where(user_id: current_user.id).find_each do |poin_event| %>
          <tr>
            <td scope="row"><%= poin_event.balance %></td>
            <td scope="row"><%= poin_event.created_at.strftime("%m/%d/%Y") + " "+poin_event.created_at.strftime("%l:%M %p") %></td>
            <td scope="row"><%= poin_event.description %></td>
            <td scope="row"><%= User.find_by("id=?",poin_event.admin_award_id).email %></td>
            <% if current_user.admin? %>
              <td scope="row"><%= link_to 'Show', poin_event %></td>
              <td scope="row"><%= link_to 'Edit', edit_poin_event_path(poin_event) %></td>
              <td scope="row"><%= link_to 'Destroy', poin_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div> 
</div> 