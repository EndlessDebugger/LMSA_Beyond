<%= form_with(model: @user, method: :patch, local:true) do |f| %>

  <div class="field">
    <%= f.label :birthdate %>
    <%= f.date_field :birthdate %>
  </div>

  <div class="field">
    <%= f.label :major %>
    <%= f.text_field :major %>
  </div>
  
  <div class="field">
    <%= f.label :bio%>
    <%= f.text_area :bio %>
  </div>

  <div class="d-flex flex-row bd-highlight mb-3 justify-content-sm-around">

    <div>
      <%if current_user.admin?%>
        <%= link_to 'Skip', admin_root_path,{class: "btn btn-outline-secondary text-dark", type: "button"} %>
      <%else%>
        <%= link_to 'Skip', root_path,{class: "btn btn-outline-secondary text-dark", type: "button"} %>
      <%end%>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-outline-secondary text-dark"%>
    </div>

  </div>

<% end %>





  
