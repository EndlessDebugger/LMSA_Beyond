<div class="d-flex flex-row  justify-content-center">
  <%=image_tag("logo.png", :height => "40%", :width => "40%")%>
  <div class="container align-items-center">
    <div class="body align-items-center my-auto">

      <br>
      <br>
      <h1 class="text-dark text-align-center"> Please fill out before continuing</h1>
      <div class=" box-2 flex-column align-items-center">

        <div class="col-md-7 align-items-center mx-auto">

          <%= form_with(model: @user) do |f| %>


            <div class="field">
              <%= f.label :birthdate %>
              <%= f.date_field :birthdate %>
            </div>

            <div class="field">
              <%= f.label :major %>
              <%= f.text_field :major %>
            </div>
            
            <div class="field">
              <%= f.label :bio%>
              <%= f.text_field :bio %>
            </div>

            <div class="d-flex flex-row bd-highlight mb-3 justify-content-sm-around">
                  <div>
                    <%if current_user.admin?%>
                      <%= link_to 'Skip', admin_root_path,{class: "btn btn-outline-secondary text-dark", type: "button"} %>
                    <%else%>
                      <%= link_to 'Skip', root_path,{class: "btn btn-outline-secondary text-dark", type: "button"} %>
                    <%end%>
                  </div>

                  <div class="actions">
                    <%= f.submit "Sign Up", {class: "btn btn-outline-secondary text-dark", type: "button"}%>
                  </div>

                  <br>

            </div>

         <% end %>


        </div>
      </div> 
    </div>
  </div>

</div>




  
