<% @title = "TAMU LMSA Points" %>
<%= stylesheet_link_tag "home.css" %>


<p id="notice"><%= notice %></p>

<div class="container py-4">

  <h1 class="display-10 fw-bold text-light">Point category Info</h1>

  <div class="d-flex flex-column bd-highlight p-5 mb-4 bg-light rounded-3">

    <div class="p-2 bd-highlight">
      <strong>Name:</strong>
      <%=@point.name%>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Points:</strong>
      <%=@point.val%>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Description:</strong>
      <%=@point.desc%>
    </div>

    <div>
      <% if current_user.admin? %>
        <%= link_to 'Edit', edit_point_path(@point), class:"btn btn-secondary text-light" %>
      <% end %>
      <%= link_to 'Back', points_path, class:"btn btn-secondary text-light" %>
    </div>
  </div>
</div>
