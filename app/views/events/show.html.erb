<p id="notice"><%= notice %></div>

<div class="container">

  <h1><%= @event.event_name %></h1>

  <div class="d-flex flex-column bd-highlight mb-3">

    <div class="p-2 bd-highlight">
      <strong>Event ID: </strong> 
      <%= @event.id %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Event name:</strong>
      <%= @event.event_name %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Event type:</strong>
      <%= @event.event_type %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Event date:</strong>
      <%= @event.event_date %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Description:</strong>
      <%= @event.description %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Event creator:</strong>
      <%= @event.event_creator %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Virtual:</strong>
      <%= @event.virtual %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Password:</strong>
      <%= @event.password %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Meeting link:</strong>
      <%= @event.meeting_link %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Signin time:</strong>
      <%= @event.signin_time %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Point val:</strong>
      <%= @event.point_val %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Graphics:</strong>
      <%= @event.graphics %>
    </div>

    <div class="p-2 bd-highlight">
      <strong>Total event hr:</strong>
      <%= @event.total_event_hr %>
    </div>
    
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Sign In to <%= @event.event_name %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <label for="password" class="col-form-label">Password:</label>
            <input type="text" class="form-control" id="password">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= link_to_if password_check(@event.password), 'Sign In',  event_hists_path(:event_hist => 
          {:event_id => @event.id, :user_id => current_user.id, :sign_in => true, :point_recv => @event.point_val}),
          method: :post, 
          :class=>"btn btn-secondary text-light", :type=>"button", "data-bs-dismiss": "modal" %>
        </div>
      </div>
    </div>
  </div>

  <%= link_to 'Edit', edit_event_path(@event), class:"btn btn-secondary text-light" %>
  <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary text-light" %>

  <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Sign In
  </button>

  <%= link_to 'Back', events_path, class:"btn btn-secondary text-light" %>

</div>